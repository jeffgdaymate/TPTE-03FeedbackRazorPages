@page
@model Aula03.MinimalApi.Pages.Feeds.Index

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1>Lista de Feedbacks</h1>
        </div>
        <div class="col-md-4 text-end">
            <a asp-page="/Feeds/Create" class="btn btn-primary">Criar novo Feedback</a>
        </div>
    </div>
    
    <div class="mt-4">
        <div class="card bg-info text-white mb-4">
            <div class="card-body">
                Total de Feedbacks: @Model.FeedbackList.Count
            </div>
        </div>
    
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nome do Cliente</th>
                    <th>Email</th>
                    <th>Comentário</th>
                    <th>Data</th>
                    <th>Avaliação</th>
                    <th>Operações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var feedback in Model.FeedbackList)
                {
                    <tr>
                        <td>@feedback.NomeCliente</td>
                        <td>@feedback.EmailCliente</td>
                        <td>@feedback.Comentario</td>
                        <td>@feedback.DataFeedback.ToString("dd/MM/yyyy")</td>
                        <td>@feedback.Avaliacao</td>
                        <td>
                            <a asp-page="./Update" asp-route-id="@feedback.IdFeedback" class="btn btn-warning btn-sm me-2"><i class="fas fa-edit"></i></a>
                            <a asp-page="./Delete" asp-route-id="@feedback.IdFeedback" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
